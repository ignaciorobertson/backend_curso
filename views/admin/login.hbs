<div class="container" style="margin-top: 100px;">
    <div class="row">
        <h3>Formulario de Login</h3>
        <form action="/admin/login" method="post">
            <div class="mb-3 row">
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="inputUser" name="usuario" placeholder="Usuario">
                </div>
            </div>
            <div class="mb-3 row">
                <div class="col-sm-10">
                    <input type="password" class="form-control" id="inputPassword" name="password" placeholder="Contraseña">
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Ingresar</button>
        </form>
        {{#if error}}
            <p>Usuario y/o contraseña incorrectos</p>
        {{/if}}
    </div>
</div>